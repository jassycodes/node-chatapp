  <link rel="stylesheet" type="text/css" href="/styles.css" />
  <script src="/js/user-public.js" type="text/javascript"></script>
   </head>
   <body class = "container-fluid">
   <!-- menu div -->
   <div id="menu" class="navbar navbar-default fixed-top">
         <div class="container-fluid"><a href="/" class="menu-item">HOME</a> <p> YOU ARE LOGGED IN AS:   
          <%= currentUser%></p> <a href=#mainContent class="menu-item">^</a> <form action="/user/logout"><input style=" padding: 10px; background-color: #0f6185; color: white; font-weight: bold; border-color: darkgrey; border-width: 3px;" type="submit" value="LOG OUT"> </form></div>
   </div>
   <!-- menu div -->
   <!--main content -->
   <div id="mainContent">
      <div id="homepage_form" style="margin-top: 200px;">
          <h1>DASHBOARD</h1>
          <form method='POST' action="/user/sendtochatbox" align=center id="chatform" role='form'>
<!--             YOUR USERNAME: <input name="username" style=" padding: 10px; padding-left: 5%; padding-right: 5%; border-color: darkgrey">
            <br> -->

            <input name="message" style=" padding: 10px; padding-left: 5%; padding-right: 5%; border-color: darkgrey">
            <button id="send" style=" padding: 10px; margin-top: 10px; background-color: #349fbf; color: white; font-weight: bold; border-color: white; border-width: 3px;">SEND</button>
         </form>

         <form method='POST' action="/clearmessages" align=center id="deleteMsgForm" role='form'>
         <button id="deleteMessages" style=" padding: 10px; margin-top: 10px; background-color: #510000; color: white; font-weight: bold; border-color: white; border-width: 3px;">DELETE MESSAGES</button>
        </form>

       <div id=status align="center">

          <form method='GET' action="/user/successget" align=center role='form' name="successget" id="successget">

            <button class="btn success" id="success">Success</button>
          </form>


       </div>
       <div id=themessage>        </div>
       <div id=messages style="margin-top: 10px; padding: 5%; background-color: white; border-color: black !important; border-style: solid;">
      <% for (var i in messagesInfo) { %> 
       <% if (messagesInfo.hasOwnProperty(i)){ %>
        <article>
            <p><b><%= messagesInfo[i].sender_username %>:</b> <%= messagesInfo[i].message %></p>
        </article>
        <% } %>
    <% } %>

       </div>
             <div id=random-string>        </div>
     <div id=top_10_titles>        </div>
      </div>
   </div>
   <!--main content -->
   </body>
   <!--container -->
</html>